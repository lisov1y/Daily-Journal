<%- include("partials/header") -%>

  <h1>Home</h1>
  <p><%= startingContent %></p>

  <% postsCache.forEach(function(post) { %>
    <h1><%= post.postTitle %></h1>
    <%  if (post.postBody.length > 100) { %>
      <p><%= post.postBody.slice(0, 99) + " ... "%><a href=<%= "posts/" + post.postTitle.replace(/\s/g, "-").toLowerCase() %>>Read More</a></p>
    <%  } else { %>
      <p><%= post.postBody %></p>
    <%  } %>
  <% }); %>

<%- include("partials/footer") -%>
