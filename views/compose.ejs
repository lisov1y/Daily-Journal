  <h1>Compose</h1>

  <form action="/compose" method="post">
    <div class="form-group">
      <label for="composeTitle">Title</label>
      <input class="form-control" type="text" name="composeTitle" autocomplete="off">
      <label for="composePost">Post</label>
      <textarea class="form-control" name="composePost" rows="5" cols="30" autocomplete="off"></textarea>
